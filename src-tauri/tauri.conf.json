{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "dev-boom",
  "version": "0.1.0",
  "identifier": "com.fanlu.dev-boom",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Project Manager",
        "width": 980,
        "height": 680,
        "minWidth": 820,
        "minHeight": 560,
        "decorations": false,
        "resizable": true
      },
      {
        "label": "mini",
        "title": "Quick Access",
        "width": 320,
        "height": 480,
        "resizable": false,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "decorations": false,
        "transparent": true,
        "center": false,
        "visible": false,
        "url": "#/mini"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
